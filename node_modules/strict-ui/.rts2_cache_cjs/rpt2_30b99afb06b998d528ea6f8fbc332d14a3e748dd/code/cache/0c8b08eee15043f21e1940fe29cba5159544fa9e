       // Disallow non theme-based values for properties that are in the theme\r\n            if (scales[alias]) {\r\n                const value = props.sx[prop];\r\n                props.sx[prop] = theme => {\r\n                    const scale = get(theme, scales[alias]);\r\n                    const transform = get(transforms, prop, get);\r\n                    const transformedValue = transform(scale, value, value);\r\n                    if (transformedValue === value) {\r\n                        throw new Error(`Cannot use a non-theme value \"${value}\" for \"${prop}\". Please either use a theme value or add a new value to the theme.`);\r\n                    }\r\n                    return transformedValue;\r\n                };\r\n            }\r\n        }\r\n    }\r\n    return themeuijsx(type, props, ...children);\r\n};\r\n//# sourceMappingURL=index.js.map","map":"{\"version\":3,\"file\":\"index.js\",\"sourceRoot\":\"\",\"sources\":[\"../../src/index.ts\"],\"names\":[],\"mappings\":\"AAAA,OAAO,EAAE,GAAG,IAAI,UAAU,EAAE,MAAM,UAAU,CAAA;AAC5C,OAAO,EAAE,GAAG,EAAE,MAAM,eAAe,CAAA;AACnC,OAAO,EAAE,MAAM,EAAE,OAAO,EAAE,UAAU,EAAE,MAAM,OAAO,CAAA;AAEnD,MAAM,gBAAgB,GAAG;IACvB,UAAU;IACV,YAAY;IACZ,OAAO;IACP,QAAQ;IACR,YAAY;IACZ,aAAa;IACb,cAAc;IACd,eAAe;IACf,SAAS;IACT,UAAU;IACV,iBAAiB;IACjB,aAAa;IACb,OAAO;IACP,gBAAgB;IAChB,WAAW;IACX,WAAW;IACX,aAAa;IACb,YAAY;IACZ,WAAW;IACX,MAAM;IACN,YAAY;IACZ,eAAe;IACf,OAAO;IACP,mBAAmB;IACnB,iBAAiB;IACjB,gBAAgB;IAChB,cAAc;IACd,uBAAuB;IACvB,oBAAoB;IACpB,aAAa;IACb,UAAU;IACV,WAAW;IACX,qBAAqB;IACrB,cAAc;IACd,eAAe;IACf,iBAAiB;IACjB,cAAc;IACd,UAAU;IACV,YAAY;IACZ,aAAa;IACb,eAAe;IACf,mBAAmB;IACnB,gBAAgB;IAChB,gBAAgB;IAChB,MAAM;CACP,CAAA;AAED,OAAO,EAAE,IAAI,EAAE,MAAM,UAAU,CAAA;AAE/B,SAAS,OAAO,CAAC,GAAW;IAC1B,OAAO,GAAG,CAAC,OAAO,CAAC,cAAc,EAAE,CAAC,IAAI,EAAE,KAAK,EAAE,MAAM,EAAE,EAAE;QACzD,OAAO,GAAG,KAAK,IAAI,MAAM,CAAC,WAAW,EAAE,EAAE,CAAA;IAC3C,CAAC,CAAC,CAAA;AACJ,CAAC;AAED,MAAM,CAAC,MAAM,GAAG,GAAG,CAAC,IAAI,EAAE,KAAK,EAAE,GAAG,QAAQ,EAAE,EAAE;IAC9C,IA